
@{
    ViewBag.Title = "SpisakPosetilaca";
    Layout = null; 
}

@using Projekat_WEB.Models
@model IEnumerable<string>

<head>
    <style>
        #gradient {
            max-width: 100%;
            max-height: 100%;
            background-color: gray;
            color: white;
            background-image: linear-gradient(-90deg, #808080,#000000);
        }

        table, th, td {
            border: 1px solid;
            border-color: antiquewhite;
        }

        table {
            border-collapse: collapse;
        }
    </style>

</head>
<body id="gradient">
    <h2>Spisak posetilaca za izabrani trening:</h2>
    <table>
        <tr><th>Korisnici:</th></tr>

        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item
                    </td>
                </tr>
               
            }
        }
    </table>
    <h4 style="position:absolute; bottom:0;left:0">
        Povratak na <a href="~/Pocetni/Index"> pocetnu stranicu</a>
    </h4>   
    
</body>
