
@{
    ViewBag.Title = "UnosKomentara";
    Layout = null;
}
<head>
<style>
    #gradient {
        max-width: 100%;
        max-height: 100%;
        background-color: gray;
        color: antiquewhite;
        background-image: linear-gradient(-90deg, #808080,#000000);
    }

  
</style>

</head>
<body id="gradient">


    @{
        if (ViewBag.Greska == null)
        {
            <h1>Komentar uspesno unesen,ceka se vlasnikovo odobrenje :)</h1>
            <h4 style="position:absolute; bottom:0;left:0">
                Povratak na <a href="~/Pocetni/Index"> pocetnu stranicu</a>
            </h4>
        }
        else
        {
            <h1>@ViewBag.Greska</h1>
            <h4 style="position:absolute; bottom:0;left:0">
                Povratak na <a href="~/Pocetni/Index"> pocetnu stranicu</a>
            </h4>

        }
    }

</body>

