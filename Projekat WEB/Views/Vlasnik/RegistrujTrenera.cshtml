
@{
    ViewBag.Title = "RegistrujTrenera";
    Layout = null;
}

<p style="color:antiquewhite">Registracija trenera</p>
<form action="~/Vlasnik/Add" method="post">
    <table>
        <tr>
            <td style="color:antiquewhite">Username:</td>
            <td>
                <input type="text" name="korisnickoime" />
            </td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Password:</td>
            <td>
                <input type="password" name="lozinka" />
            </td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Ime:</td>
            <td>
                <input type="text" name="ime" />
            </td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Prezime:</td>
            <td>
                <input type="text" name="prezime" />
            </td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Pol:</td>
            <td>
                <input list="pol" name="pol" />
                <datalist id="pol">
                    <option value="ZENSKI"></option>
                    <option value="MUSKI"></option>
                </datalist>
            </td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Email:</td>
            <td>
                <input type="text" name="email" />
            </td>
        </tr>
        <tr>
            <td style="color:antiquewhite">Datum rodjenja:</td>
            <td>
                <input type="date" name="godinaRodjenja"
                       min="1970-01-01" max="2022-12-31">
            </td>
        </tr>

        <tr>
            <td style="text-align:center" ; colspan="2">
                <input type="submit" value="Registruj" />
            </td>
        </tr>

    </table>
</form>